{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "UMD",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "importHelpers": false,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,

    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    ".vscode",
    "coverage",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
